{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="containers" style="">

        <div style="text-align: center; background: #333333; margin-bottom: 35px; padding: 7px 0 10px 0;">
            <h3 style="color: #ffffff;">Liste</h3>
        </div>

        <div style="width: 800px; margin: 0 auto;">

            <a href="{{ path('info_insert') }}" style="margin-bottom: 25px;" class="btn btn-primary btn-sm"> <i class="fa fa-plus"></i> Ajouter</a>

            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Nom</th>
                    <th>Marque</th>
                    <th>Reference</th>
                    <th>Stock</th>
                    <th>Date de fin</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for item in Data %}
                    <tr style="text-align: center;">
                        <td>{{ loop.index }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.brand }}</td>
                        <td>{{ item.reference }}</td>
                        <td>{{ item.stock }}</td>
                        <td>{{ item.enddate }}</td>
                        <td><a href="{{ path('info_update',{id:item.id}) }}"><span class="fa fa-edit"></span></a></td>
                        <td><a href="{{ path('info_remove',{id:item.id}) }}"><span class="fa fa-trash"></span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>Sr#</th>
                    <th>Nom</th>
                    <th>Marque</th>
                    <th>Reference</th>
                    <th>Stock</th>
                    <th>Date de fin</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
